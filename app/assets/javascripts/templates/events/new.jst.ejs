<h2>New event</h2>

<form action="/events" method="post" class="form-horizontal" data-type="json" data-remote="true" enctype="multipart/form-data">
  <fieldset>
    <div class="control-group">
      <label class="control-label required" for="name">Event name</label>
      <div class="controls">
        <input class="input-xxlarge" type="text" name="event[name]" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="description">Description</label>
      <div class="controls">
        <textarea class="input-xxlarge" rows=4 name="event[description]"></textarea>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="location">Location</label>
      <div class="controls">
        <input class="input-xxlarge" type="text" name="event[location]" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label required" for="start-time">Start time</label>
      <div class="controls">
        <div class="input-append date input-datepicker" data-date="<%= moment().format('MM-DD-YYYY') %>" data-date-format="mm-dd-yyyy">
          <input class="input-small" type="text" name="event[date]" value="<%= moment().format('MM-DD-YYYY') %>" readonly />
          <span class="add-on">
            <i class="icon-th"></i>
          </span>
        </div>
        <div class="input-append">
          <input class="input-small input-timepicker" type="text" name="event[time]" value="<%= moment().format('hh:mm A') %>" readonly />
          <span class="add-on">
            <i class="icon-time"></i>
          </span>
        </div>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="photo">Photo</label>
      <div class="controls">
        <input type="file" name="event[photo]" />
      </div>
    </div>

    <input class="btn btn-primary" type="submit" />

  </fieldset>
</form>
