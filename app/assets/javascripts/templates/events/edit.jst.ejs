<form action="/events/<%= id %>" method="post" class="form-horizontal" data-type="json" data-remote="true" enctype="multipart/form-data">
  <input name="_method" type="hidden" value="put" />

  <fieldset>
    <div class="control-group">
      <label class="control-label required" for="name-<%= id %>">Event name</label>
      <div class="controls">
        <input class="input-xlarge" type="text" name="event[name]" id="name-<%= id %>" value="<%= name %>"/>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="location-<%= id %>">Location</label>
      <div class="controls">
        <input class="input-xlarge" type="text" name="event[location]" id="location-<%= id %>" value="<%= location %>"/>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label required" for="start-time-<%= id %>">Start time</label>
      <div class="controls">
        <div class="input-append date input-datepicker" data-date="<%= moment(start_time).format('MM-DD-YYYY') %>" data-date-format="mm-dd-yyyy">
          <input class="input-small" type="text" name="event[date]" value="<%= moment(start_time).format('MM-DD-YYYY') %>" readonly />
          <span class="add-on">
            <i class="icon-th"></i>
          </span>
        </div>
        <div class="input-append">
          <input class="input-small input-timepicker" type="text" name="event[time]" value="<%= moment(start_time).format('hh:mm A') %>" readonly />
          <span class="add-on">
            <i class="icon-time"></i>
          </span>
        </div>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="photo-<%= id %>">Photo</label>
      <div class="controls">
        <input type="file" name="event[photo]" id="photo-<%= id %>" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="description-<%= id %>">Description</label>
      <div class="controls">
        <textarea class="input-xlarge" rows=4 name="event[description]" id="description-<%= id %>" value="<%= description %>"></textarea>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="categories">Tags</label>
      <div class="input-xlarge controls categories">
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button class="btn btn-primary" type="submit">Update Event</button>
      </div>
    </div>

  </fieldset>
</form>
