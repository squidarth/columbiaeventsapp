<div id="event">
<div id="eventuser">
	<a href="/users/<%= @event.user.id %>">
	<% if @event.user.avatar.file? %>
	<%= image_tag @event.user.avatar.url(:thumb) %>
	<% elsif @event.user.fbnickname %>
	<img src="http://graph.facebook.com/<%= @event.user.fbnickname %>/picture?type=normal" height="75" width="75"></img>
	<% elsif @event.user.facebookid%>
	<img src="https://graph.facebook.com/<%= @event.user.facebookid%>/picture?type=normal" height="75" width="75"></img>
	<% else%>
	<%= image_tag ("bowl3.jpg"), :height => 75, :width => 75 %>
	<% end %>
	</a>
	<div id="user_details">
		<p id="title"><%= @event.name %></p>
		<% if !@event.author.eql?("")%>
		<p id="name">By: <%= @event.author %></p>
		<% else %>
		<p id="name">By: <%= @event.user.name %></p>
		<% end %>
	</div>	
</div>


<div id="eventshow">
	<% if @event.facebooklink %>
	<a href="http://www.facebook.com/event.php?eid=<%= @event.facebooklink %>">
	<% if @event.photo.file? %>
	<%= image_tag @event.photo.url(:small) %>
	<% elsif %>
	<img src="https://graph.facebook.com/<%= @event.facebooklink%>/picture?type=large" width="160"></img>
	<% else %>
	<%= image_tag ("bowl3.jpg"), :height => 100, :width => 130 %>
	<% end %>
	</a>
	<% else %>
	<% if @event.photo.file? %>
	<%= image_tag @event.photo.url(:small) %>
	<% else %>
	<%= image_tag ("bowl3.jpg"), :height => 100, :width => 130 %>
	<% end %>
	<% end %>


<!-- CASE FACEBOOK -->
<% if @event.facebooklink %>
<div id="attendees">
<a href="#" id="attendees_count"><%= pluralize(@attendings.count, 'Person') %> Attending</a><br />
<a href="#" id="maybe_count"><%= pluralize(@maybes.count, 'Person')%> might be attending</a>
<ul id="attendees_list">
	<% @attendings.each do |attending| %>
	<li>
		<%= link_to attending["name"], '#' %> 
	</li>
	<% end %>
</ul>
<ul id="maybe_list">
	<% @maybes.each do |attending| %>
	<li>
		<%= link_to attending["name"], '#' %> 
	</li>
	<% end %>
</ul>

</div>

<!-- CASE NO FACEBOOK -->
<% else %>



<div id="attendees">
<% if @event.attendings.find_all_by_status("Attending").kind_of?(Array) %>
<a href="#" id="attendees_count"><%= pluralize(@event.attendings.find_all_by_status('Attending').count, 'Person') %> Attending</a><br />
<% elsif @event.attendings.find_all_by_status("Attending").nil? %>
<a href="#" id="attendees_count">0 People Attending</a><br />
<% else%>
<a href="#" id="attendees_count">1 Person Attending</a><br />
<% end %>

<% if @event.attendings.find_all_by_status("Maybe").kind_of?(Array) %>
<a href="#" id="maybe_count"><%= pluralize(@event.attendings.find_all_by_status('Maybe').count, 'Person')%> Might Be Attending</a>
<% elsif @event.attendings.find_all_by_status("Maybe").nil? %>
<a href="#" id="maybe_count">0 People Might Be Attending</a><br />
<% else%>
<a href="#" id="maybe_count">1 Person Might Be Attending</a><br />
<% end %>

<!-- CASE ATTENDING -->
<% if @event.attendings.find_all_by_status("Attending").nil? %>
<ul id="attendees_list">
</ul>
<% elsif @event.attendings.find_all_by_status("Attending").kind_of?(Array) %>
<ul id="attendees_list">
	<% @event.attendings.find_all_by_status("Attending").each do |attending| %>
	<li>
		<%= link_to User.find(attending.user_id).name, User.find(attending.user_id) %> 
	</li>
	<% end %>
</ul>
<% else%>
<ul id="attendees_list">
	<li>
		<%= link_to User.find(@event.attendings.find_all_by_status("Attending").user_id).name, User.find(@event.attendings.find_all_by_status("Attending").user_id) %> 
	</li>
</ul>
<% end %>

<!-- CASE MAYBE -->
<% if @event.attendings.find_all_by_status("Maybe").nil?%>
<ul id="maybe_list">
</ul>
<% elsif @event.attendings.find_all_by_status("Maybe").kind_of?(Array) %>
<ul id="maybe_list">
	<% @event.attendings.find_all_by_status("Maybe").each do |attending| %>
	<li>
		<%= link_to User.find(attending.user_id).name, User.find(attending.user_id) %> 
	</li>
	<% end %>
</ul>
<% else%>
<ul id="maybe_list">
	<li>
		<%= link_to User.find(@event.attendings.find_all_by_status("Maybe").user_id).name, User.find(@event.attendings.find_all_by_status("Maybe").user_id) %> 
	</li>
</ul>

<% end %>
</div>



<% end %>
<script type="text/javascript">
$(document).ready(function(){
	var attending_clicked = false;
	var maybe_clicked = false;
	
	$('#maybe').click(function(e){

		<% if signed_in? %>
		<% if @event.facebooklink && (current_user.fbnickname || current_user.facebookid) %>
				    var facebooklink = "<%= @event.facebooklink %>";
					FB.api('/' + facebooklink + '/maybe', 'post', function(response){
						if(!response || response.error){
						}else{
						}	
					});
		<% end %>
		<% end %>
	});
	$('#attend').click(function(e){
		
		<% if signed_in? %>
		<% if @event.facebooklink && (current_user.fbnickname || current_user.facebookid) %>
			        var facebooklink = "<%= @event.facebooklink %>";
					FB.api('/' + facebooklink + '/attending', 'post', function(response){
						if(!response || response.error){
							alert('Something went wrong!');
						}else{
							alert('You are now attending this event!');
						}	
					});
		<% end %>
		<% end %>		
	});
	
	$("#attendees_count").click(function(e){
		var length = $("#attendees_list li").size()*20;
		if(!attending_clicked && !maybe_clicked){
			$("#attendees_list").show();
			$("#attendees_list").stop().animate({height: length}, {queue:false, duration:600});
			attending_clicked = true;
		}else if(attending_clicked){
			$("#attendees_list").stop().animate({height: '5px'}, {queue:false, duration:600});
			$("#attendees_list").fadeOut();
			attending_clicked = false;
		}else if(maybe_clicked){
			$("#maybe_list").stop().animate({height: '5px'}, {queue:false, duration:600});
			$("#maybe_list").fadeOut();
			maybe_clicked = false;
			$("#attendees_list").show();
			$("#attendees_list").stop().animate({height: length}, {queue:false, duration:600});
			attending_clicked = true;
		} 	
	
	});
	
	$('#maybe_count').click(function(e){
		var length = $("#maybe_list li").size()*20;

		if(!attending_clicked && !maybe_clicked){
			$("#maybe_list").show();
			$("#maybe_list").stop().animate({height: length}, {queue:false, duration:600});
			maybe_clicked = true;
		}else if(maybe_clicked){
			$("#maybe_list").stop().animate({height: '5px'}, {queue:false, duration:600});
			$("#maybe_list").fadeOut();
			maybe_clicked = false;
		}else if(attending_clicked){
			$("#attendees_list").stop().animate({height: '5px'}, {queue:false, duration:600});
			$("#attendees_list").fadeOut();
			maybe_clicked = true;
			$("#maybe_list").show();
			$("#maybe_list").stop().animate({height: length}, {queue:false, duration:600});
			attending_clicked = false;
		} 	

	});

});
</script>
<ul>
<li>
	<p><%= @event.description %></p>	
</li>
<% if(!(@event.location == "")) %>
<li>
	<%= @event.location %>
</li>
<% end %>
<li>
	<% if @event.date && @event.time%>
	On <%= @months[@event.date.month-1] %> <%= @event.date.day %>, <%= @event.date.year %> at <%= @event.time.strftime("%I:%M %p")%> 
	<% elsif @event.date %>
	On <%= @months[@event.date.month-1] %> <%= @event.date.day %>, <%= @event.date.year %>
	<% elsif @event.time %>
	At <%= @event.time.strftime("%I:%M %p")%> 
	<% end %>
</li>
<% if @event.facebooklink%>
<li>
	<a href="http://www.facebook.com/event.php?eid=<%= @event.facebooklink %>"><b>Facebook Event</b></a>	
</li>
<% end %>
</ul>
</div>
<% if current_user?(@event.user)%>
<div id="controls">
<%= link_to 'Edit this event', edit_event_path(@event) %>
</div>
<% end %>
<% if signed_in? %>
<div id="attending_forms">
	<%= form_for @attending, :url => {:controller => :attendings, :action => :attend }, :html => {:id => "attend"} do |f| %>
	<%= f.hidden_field :event_id, :value => @event.id %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :status, :value => "Attending"%>
	<button class="submitter" id="attend_submit" name="commit" type="submit" value="Attending">Attending</button>
	<% end %>
	<%= form_for @attending, :url => {:controller => :attendings, :action => :maybe}, :html => {:id => "maybe"} do |f| %>
	<%= f.hidden_field :event_id, :value => @event.id %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :status, :value => "Maybe"%>
	<button class="submitter" id="maybe_submit" name="commit" type="submit" value="Maybe">Maybe</button>
	<% end %>
</div>
<% else %>
<div id="attending_invitation">Wanna tell the world you're going? <%= link_to "Sign up", signup_path %> to say you're attending!</div>
<% end %>
<div id="comments">
<fb:like href="www.eventsalsa.com/events/<%= @event.id %>" send="true" width="450" show_faces="true" action="like" font=""></fb:like>
<fb:comments href="http://www.eventsalsa.com/events/<%= @event.id %>" num_posts="10" width="600"></fb:comments>
</div>

</div>
