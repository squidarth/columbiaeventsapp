<div id="createnewevents">	
		<div id="make_new_event">
			Pull a Facebook Event!
		</div>
	<%= form_tag({:controller => 'events', :action => 'pull'}, {:id => 'new_event'}) do%>
	<ul>
		<li>
			<label><p>Facebook Event URL</p></label>
			<%= text_field_tag :url%></p>
		</li>
		<li><p id="select">
			<label></label>
			<%= select_tag :category, options_for_select({'Greek Life' => 1, 'Theater' => 2, 'Sports' => 3, 'Politics' => 4, 'Career Networking' => 5, 'Arts' => 6, 'Community Service' => 7, 'Student Council' => 8, 'Cultural' => 10, 'Special Interest' => 11,'Academics'=> 14, 'NYC Events' => 13, 'Academics' => 12, 'Other' => 9}), :multiple => true%>
			</p>
		</li>
		<li><button class="submitter" id="session_submit" name="commit" type="submit">Create Event</button></li>
	</ul>
	<% end %>
</div>	

<div id="createnewevents">
	
	<%= form_for(@event, :html => { :multipart => true, :id => "new_event" }) do |f| %>
		<div id="make_new_event">
			<%= @title %>
		</div>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <p>Errors prevented your event from being saved!</p>

      <ul class="errors">
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<ul>
    <li><p><%= f.label :name %></p>
    <%= f.text_field :name %></li>
    	
    <li><p><label for="event_description">What?</label></p>
    <%= f.text_field :description %></li>

    <li><p><label for="event_date">When?</label></p>
    <%= f.text_field :date, :size => 5  %> <%= f.text_field :time, :size => 5 %><!--CHANGED TIME_SELECT TO TEXT-FIELD -->
    </li>
    <li><p><label for="event_location">Where?</label></p>
    <%= f.text_field :location %></li>
	
    <li><p><label for="event_author">Student Group(if applicable)</label></p>
    <%= f.text_field :author %></li>
    
    <li><p><%= f.label :category %></p>
    <%= f.select(:category, [['Greek Life', 1], ['Theater', 2], ['Sports', 3], ['Politics', 4], ['Career Networking', 5], ['Arts', 6], ['Community Service', 7], ['Student Council', 8], ['Cultural', 10],['Academics', 14],['Music', 12], ['NYC Events', 13], ['Special Interest', 11], ['Other', 9]]) %></li>
  	
  	<li><p><label for="photo">Profile Picture</label></p>
  	<%= f.file_field :photo, :class => 'file_field' %></li>
  	
  	<% if(!current_user.authorizations.empty?)%>
	<li><p>Make Facebook event? <%= f.check_box(:facebookevent, {}, 1, 0)%></p></li>
	<% end %>
    <li><button class="submitter" id="session_submit" name="commit" type="submit">Create Event</button></li>
    </ul>
<% end %>
</div>
