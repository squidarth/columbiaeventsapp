<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

		<h1 id="mainheader">Welcome to Events Hub!</h1>

	<section class="success">
		<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
		<% end %>
	</section>
	
	<nav>
			<ul>
				<li><%= link_to "Home", root_path %></li>
				<li><%= link_to "About", about_path %></li>
				<li><%= link_to "Contact", contact_path %></li>
				<% if signed_in? %>
				<li><%= link_to "Profile", current_user %></li>
				<li><%= link_to "View all users", allusers_path%></li>
				<li><%= link_to "Sign out", signout_path %></li>
				<% else %> 
				<li><%= link_to "Sign in", signin_path %></li>
				<li><%= link_to "Sign up!", signup_path %></li>
				<% end %>
			</ul>
  </nav>
  <%= yield %>
  <nav>
  	<ul>
  		<li><%= link_to "Fraternities", fraternities_path %></li>
  		<li><%= link_to "Theater", theater_path %></li>
  		<li><%= link_to "Sports", sports_path %></li>
  		<li><%= link_to "Arts", arts_path %></li>
  		<li><%= link_to "Career Networking", careernetworking_path %></li>
  		<li><%= link_to "Community Service", communityservice_path %></li>
  		<li><%= link_to "Student Council", stuco_path %></li>
  	</ul>
  </nav>
</body>
</html>
