<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'custom', 'skin' %>

  <%= javascript_include_tag  "https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js" %>
  <%= javascript_include_tag  "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" %>
  <%= javascript_include_tag "jquery-rails.js" %>
  <%= javascript_include_tag 'hoverIntent', 'application', 'scroller_roll.js' %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
	        $(document).ready(function() {
                $("#scroller_roll").scroller_roll({
                    title_show: 'disable',//enable  disable
                    time_interval: '17',
                    window_background_color: "#FFFFFF",
                    window_padding: '1',
                    border_size: '10',
                    border_color: '#FFFFFF',
                    images_width: '100',
                    images_height: '100',
                    images_margin: '0',
                    title_size: '12',
                    title_color: 'black',
                    show_count: '10'
                });
            });
</script>

</head>
<body>
 <div id="fb-root"></div>
 <script src="http://connect.facebook.net/en_US/all.js"></script>
 <script>
   FB.init({
     appId  : '263515600329607',
     status : true, // check login status
     cookie : true, // enable cookies to allow the server to access the session
     xfbml  : true, // parse XFBML
     oauth : true // enables OAuth 2.0
   });
 </script>
	<div id="main_container">
		<div id="header">
			<div id="logo"><a href="/"><%= image_tag ("logo.gif")%></div>
					<div id="topright">
						<%= link_to "About", about_path %>
						<%= link_to "Contact", contact_path %>
						<% if signed_in? %>
						<%= link_to "Profile", current_user %>
						<%= link_to "View all users", allusers_path%>
						<%= link_to "Sign out", signout_path %>
						<% else %>
						<%= link_to "Sign in", signin_path %>
						<% end %>
					</div>
					<ul id="categories">
						<li><%= link_to "Fraternities", fraternities_path %></li>
						<li><%= link_to "Theater", theater_path %></li>
						<li><%= link_to "Sports", sports_path %></li>
						<li><%= link_to "Arts", arts_path %></li>
						<li><%= link_to "Career Networking", careernetworking_path %></li>
						<li><%= link_to "Community Service", communityservice_path %></li>
						<li><%= link_to "Student Council", stuco_path %></li>
					</ul>	

  </div>
  	<section class="success">
		<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
		<% end %>
	</section>
	<div id="fb-root"></div>
	  <script src="http://connect.facebook.net/en_US/all.js"></script>

  <%= yield %>
  </div>
</body>
</html>
