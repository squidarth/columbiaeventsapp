    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <p><%= f.label :name %><br />
    <%= f.text_field :name %></p>
    	
    <p><%= f.label :description %><br />
    <%= f.text_field :description %></p>

    <p><%= f.label :date %><br />
