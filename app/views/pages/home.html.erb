<%= render 'shared/catshowpage'%>


<%= link_to "More", "#", :id => "more" %>
<script type="text/javascript">
var page = 1;
var loading = false;
$("#more").click(function(e){
  e.preventDefault();
  $("#loading").show();
  $.ajax({
    url: '?page=' + page,
    type: 'get',
    dataType: 'script',
    success: function(){
      page++; 
     }
    });
    page++;  
  });
</script>


